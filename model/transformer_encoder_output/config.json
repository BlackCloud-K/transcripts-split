{
  "sentence_encoder": "BAAI/bge-small-en-v1.5",
  "embedding_dim": 384,
  "hidden_size": 256,
  "num_layers": 4,
  "num_heads": 8,
  "dropout": 0.1,
  "activation": "gelu",
  "batch_size": 8,
  "learning_rate": 0.0003,
  "num_epochs": 10,
  "weight_decay": 0.01,
  "warmup_steps": 100,
  "train_split": 0.8,
  "seed": 42,
  "max_sentences": 150,
  "use_stratified_sampling": true,
  "use_combined_loss": true,
  "focal_alpha": 0.25,
  "focal_gamma": 2.0,
  "positive_weight": 8.0,
  "focal_weight": 0.7,
  "use_oversampling": true,
  "oversample_ratio": 4.0,
  "use_smote": true,
  "data_path": "training_data.json",
  "output_dir": "./transformer_encoder_output",
  "model_save_dir": "./transformer_encoder_final",
  "use_wandb": false,
  "gradient_accumulation_steps": 4
}